//Get a three-digit number from the user and check if the digit 1 and digit 0 are the same  .If yes,print 1;otherwise,print 
#include<stdio.h>
int main()
{
    int a,d0,d1,Result;
    printf("Enter a number:");
    scanf("%d",&a);
    d0=(a%10);
    d1=(a/10)%10;
    Result=(d0==d1);
    printf("%d",Result);
    return 0;
}
