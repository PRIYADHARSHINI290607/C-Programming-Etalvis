//Get a three-digit number from the user and print the reverse of the number
#include<stdio.h>
int main()
{
    int a,d1,d2,d3,Reverse;
    printf("Enter a number:");
    scanf("%d",&a);
    d3=(a%10);
    d2=(a/10)%10;
    d1=(a/100);
    Reverse=(d3*100)+(d2*10)+d1;
    printf("%d",Reverse);
    return 0;
}
