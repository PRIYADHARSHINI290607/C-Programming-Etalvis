//write a program to get a number from user and print the reverse of that number
#include<stdio.h>
int main()
{
    int num,rev=0,digit;
    printf("Enter a number:");
    scanf("%d",&num);
    if(num<0)
    {
        num=-num;
    }
    loop:if(num>0)
    {
        digit=num%10;
        rev=rev*10+digit;
        num=num/10;
        goto loop;
    }
    else
    {
        printf("%d",rev);
    }
    return 0;
}
