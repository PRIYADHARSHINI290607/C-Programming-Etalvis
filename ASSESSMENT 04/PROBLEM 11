//write a program to get a number from user and print the sum of all digits
#include<stdio.h>
int main()
{
    int num,sum=0,digit;
    printf("Enter a number:");
    scanf("%d",&num);
    if(num<0)
    {
        num=-num;
    }
    loop:if(num>0)
    {
        digit=num%10;
        sum=digit+sum;
        num=num/10;
        goto loop;
    }
    else
    {
        printf("%d",sum);
    }
    return 0;
}
