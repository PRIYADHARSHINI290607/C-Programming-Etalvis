//Get a four-digit number from the user and check if the first 2 digits and last two digits are the same .If yes,print 1;otherwise,print 0
#include<stdio.h>
int main()
{
    int a,d0,d1,Result;
    printf("Enter a number:");
    scanf("%d",&a);
    d1=(a/100);
    d0=(a%100);
    Result=(d0==d1);
    printf("%d",Result);
    return 0;
}
