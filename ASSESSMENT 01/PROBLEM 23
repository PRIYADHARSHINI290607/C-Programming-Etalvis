//Get a three-digit number from user.if the sum of the digits is less than 10, then print the sum,otherwise add the digits of the sum, and print the sum 
#include<stdio.h>
int main()
{
    int a,d1,d2,d3,sum;
    printf("Enter a number:");
    scanf("%d",&a);
    d1=(a/100);
    d2=(a/10)%10;
    d3=(a%10);
    sum=d1+d2+d3;
    
    if(sum<10)
    {
    printf("%d",sum);
    }
    else
    {
        sum=(sum/10)+(sum%10);
         if(sum<10)
         {
             printf("%d",sum);
         }
         else{
             printf("%d",(sum/10)+(sum%10));
         }
    }
    return 0;
}
